<h1>Create an Account</h1>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %> </li>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.submit "Create Account" %>
<% end %>
